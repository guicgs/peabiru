{
  "extends": "airbnb",
  "plugins": [
    "jam3"
  ],
  "rules": {
    "no-console": "off",
    "no-alert": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": 0,
    "arrow-parens": [
      2,
      "always"
    ],
    "jsx-a11y/label-has-associated-control": 0,
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "jam3/no-sanitizer-with-danger": [
      0,
      {
        "wrapperName": [
          "sanitizer"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}